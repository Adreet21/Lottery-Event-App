<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DashboardActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:backgroundTint="#F8F7F7"
        android:contentDescription="Back Button"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Entrant Dashboard"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/profile_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Icon ImageView -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:contentDescription="Profile Icon"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dashboard_title"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Waiting List Button -->
    <Button
        android:id="@+id/waiting_list"
        android:layout_width="288dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Joined Waiting List"
        app:layout_constraintTop_toBottomOf="@id/dashboard_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notifications Settings Button -->
    <Button
        android:id="@+id/notification"
        android:layout_width="288dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Notifications Settings"
        app:layout_constraintTop_toBottomOf="@id/waiting_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View/Edit Profile Button -->
    <Button
        android:id="@+id/edit_profile"
        android:layout_width="288dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="View/Edit Profile"
        app:layout_constraintTop_toBottomOf="@id/notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan QR Code Button -->
    <Button
        android:id="@+id/qr_code"
        android:layout_width="288dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Scan QR Code"
        app:layout_constraintTop_toBottomOf="@id/edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notification Icon Button -->
    <ImageButton
        android:id="@+id/notification_button"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Notification Icon"
        android:src="@android:drawable/stat_notify_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

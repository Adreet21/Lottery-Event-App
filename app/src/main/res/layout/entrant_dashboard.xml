<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DashboardActivity">


    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="202dp"
        android:layout_height="34dp"
        android:layout_marginTop="92dp"
        android:text="Entrant Dashboard"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Icon ImageView -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:contentDescription="Profile Icon"
        android:layout_marginTop="84dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/dashboard_title"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/waiting_list"
        android:layout_width="288dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Waiting List"
        app:layout_constraintTop_toBottomOf="@id/dashboard_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notifications Settings Button -->
    <Button
        android:id="@+id/notification"
        android:layout_width="288dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Notifications Settings"
        app:layout_constraintTop_toBottomOf="@id/waiting_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View/Edit Profile Button -->
    <Button
        android:id="@+id/edit_profile"
        android:layout_width="287dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="View/Edit Profile"
        app:layout_constraintTop_toBottomOf="@id/notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan QR Code Button -->
    <Button
        android:id="@+id/qr_code"
        android:layout_width="289dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Scan QR Code"
        app:layout_constraintTop_toBottomOf="@id/edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout"
        android:layout_width="184dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0B0B0B"
        android:text="Logout"
        app:layout_constraintTop_toBottomOf="@id/qr_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Additional Image Button (Notification Icon) -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Notification Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/stat_notify_chat" />

</androidx.constraintlayout.widget.ConstraintLayout>

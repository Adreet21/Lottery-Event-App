<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp" />

        <!-- Event Header -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_header_admin"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button">

            <TextView
                android:id="@+id/facility_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Facility Description Label -->
        <TextView
            android:id="@+id/label_facility_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" />

        <!-- Facility Description -->
        <TextView
            android:id="@+id/facility_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Facility Description"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_facility_description"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />

        <!-- Facility Address Label -->
        <TextView
            android:id="@+id/label_facility_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facility_description"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Facility Address -->
        <TextView
            android:id="@+id/facility_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Facility Address"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_facility_address"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />

        <!-- Facility Phone Label -->
        <TextView
            android:id="@+id/label_facility_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facility_address"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Facility Phone -->
        <TextView
            android:id="@+id/facility_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_facility_phone"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />

        <!-- Geolocation Status Label -->
        <TextView
            android:id="@+id/label_geolocation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geolocation Status:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facility_phone"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Geolocation Status -->
        <TextView
            android:id="@+id/geolocation_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Geolocation Enabled"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_geolocation_status"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />

        <!-- Remove Facility Button -->
        <Button
            android:id="@+id/remove_facility_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Remove Facility"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF0000"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/geolocation_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

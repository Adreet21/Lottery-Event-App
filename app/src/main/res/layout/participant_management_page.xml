


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header Section -->

    <!-- Main Content Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_box_white"
        android:paddingBottom="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Participant Management"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- CardView for Chosen Entrants -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btn_chosen_entrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Chosen Entrants"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#1F41BB" />
            </androidx.cardview.widget.CardView>

            <!-- CardView for Cancelled Entrants -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btn_cancelled_entrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Cancelled Entrants"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#1F41BB" />
            </androidx.cardview.widget.CardView>

            <!-- CardView for Final Registered List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btn_final_registered_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:text="Final Registered List"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#1F41BB" />
            </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>

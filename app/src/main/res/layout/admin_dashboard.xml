<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAF8F8"
    android:gravity="center_horizontal">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:backgroundTint="#F8F7F7"
        android:contentDescription="Back Button"
        android:src="@android:drawable/ic_menu_revert" />

    <!-- Dashboard Title and Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Profile Icon" />
    </LinearLayout>

    <!-- Buttons for different sections -->
    <Button
        android:id="@+id/event_management_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Event management"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_management_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Profile management"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/image_management_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Image management"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/qr_code_data_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="QR code data"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/facilities_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1F41BB"
        android:text="Facilities"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="185dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0D0D0D"
        android:text="Log out"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
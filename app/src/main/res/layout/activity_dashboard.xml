<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <!-- Top Toolbar with Title and User Icon -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="User Icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main Menu Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <!-- Each button uses MaterialButton for corner radius and background tint support -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_event"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="12dp"
            android:text="Create New Events"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            app:backgroundTint="#1F41BB"
            app:cornerRadius="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ongoing_events"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            android:text="On Going Events"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            app:backgroundTint="#1F41BB"
            app:cornerRadius="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_past_events"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Past Events"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:paddingVertical="12dp"
            app:backgroundTint="#1F41BB"
            app:cornerRadius="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_facility"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:text="Create / Manage \nFacility"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:paddingVertical="12dp"
            app:backgroundTint="#1F41BB"
            app:cornerRadius="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="144dp"
            android:layout_height="49dp"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#000000"
            android:text="Logout"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

</LinearLayout>

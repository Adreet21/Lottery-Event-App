<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#A0A0A0" /> <!-- Shadow color -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button Layer -->
    <item android:top="4dp" android:left="4dp">
        <shape>
            <gradient
                android:startColor="#1F41BB"
                android:endColor="#102A8C"
                android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner Highlight Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
